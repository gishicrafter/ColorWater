<?xml version="1.0" ?> 
<project name="ColorWater">
	
	<property file="build.properties" />
	
	<target name="clean">
		<delete dir="${dir.mcp}\src\common\buildcraft" />
		<delete dir="${dir.mcp}\src\common\forestry" />
		<delete dir="${dir.mcp}\src\common\colorwater" />
		<delete dir="${dir.mcp}\reobf\minecraft" />
	</target>
	
	<target name="build">
		<mkdir dir="${dir.mcp}\src\common\buildcraft\api\recipes"/>
		<copy todir="${dir.mcp}\src\common\buildcraft\api\recipes" file="${dir.mcp}\api\buildcraft\api\recipes\RefineryRecipe.java" />
		
		<mkdir dir="${dir.mcp}\src\common\buildcraft\api\fuels" />
		<copy todir="${dir.mcp}\src\common\buildcraft\api\fuels" file="${dir.mcp}\api\buildcraft\api\fuels\IronEngineFuel.java" />
		
		<mkdir dir="${dir.mcp}\src\common\forestry\api" />
		<copy todir="${dir.mcp}\src\common\forestry\api">
			<fileset dir="${dir.mcp}\api\forestry\api\recipes\" />
		</copy>
		
		<copy todir="${dir.mcp}\src\common">
			<fileset dir="${dir.src}" />
		</copy>
	</target>
	
	<target name="recompile">
		<exec dir="${dir.mcp}" executable="cmd" osfamily="windows">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="${dir.mcp}" executable="bash" osfamily="unix">
			<arg line="recompile.sh" />
		</exec>
	</target>
	
	<target name="reobfuscate">
		<exec dir="${dir.mcp}" executable="cmd" osfamily="windows">
			<arg line="/c reobfuscate.bat" />
		</exec>
		<exec dir="${dir.mcp}" executable="bash" osfamily="unix">
			<arg line="reobfuscate.sh" />
		</exec>
	</target>
	
	<target name="release">
		<antcall target="clean" />
		<antcall target="build" />
		<antcall target="recompile" />		
		<antcall target="reobfuscate" />
		
		<mkdir dir="${dir.release}" />
		<buildnumber />
		<jar destfile="${dir.release}\${release.mod.name}-${release.mod.version}.${build.number}.jar">
			<fileset dir="${dir.mcp}\reobf\minecraft" />
			<fileset dir="${dir.resource}" />
		</jar>
		
		<antcall target="clean" />
	</target>
	
</project>